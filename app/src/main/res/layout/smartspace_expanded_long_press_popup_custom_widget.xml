<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/smartspace_long_press_popup_width"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:layout_gravity="center">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/expanded_long_press_popup_delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        app:icon="@drawable/ic_delete"
        app:iconTint="?android:textColorPrimary"
        app:iconPadding="@dimen/margin_16"
        android:gravity="start|center_vertical"
        android:paddingLeft="@dimen/margin_16"
        android:minHeight="@dimen/smartspace_long_press_popup_item_height"
        android:paddingStart="@dimen/smartspace_dismiss_margin"
        android:paddingEnd="@dimen/smartspace_dismiss_margin"
        android:textColor="?android:textColorPrimary"
        android:text="@string/expanded_custom_widget_delete"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.Smartspacer.Page.Popup"
        tools:textAppearance="@style/TextAppearance.Smartspacer.Page.Popup.Preview" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/expanded_long_press_popup_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        app:icon="@drawable/ic_settings"
        app:iconTint="?android:textColorPrimary"
        app:iconPadding="@dimen/margin_16"
        android:gravity="start|center_vertical"
        android:paddingLeft="@dimen/margin_16"
        android:minHeight="@dimen/smartspace_long_press_popup_item_height"
        android:paddingStart="@dimen/smartspace_dismiss_margin"
        android:paddingEnd="@dimen/smartspace_dismiss_margin"
        android:textColor="?android:textColorPrimary"
        android:text="@string/expanded_custom_widget_options"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.Smartspacer.Page.Popup"
        tools:textAppearance="@style/TextAppearance.Smartspacer.Page.Popup.Preview" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/expanded_long_press_popup_configure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        app:icon="@drawable/ic_configure"
        app:iconTint="?android:textColorPrimary"
        app:iconPadding="@dimen/margin_16"
        android:gravity="start|center_vertical"
        android:paddingLeft="@dimen/margin_16"
        android:minHeight="@dimen/smartspace_long_press_popup_item_height"
        android:paddingStart="@dimen/smartspace_dismiss_margin"
        android:paddingEnd="@dimen/smartspace_dismiss_margin"
        android:textColor="?android:textColorPrimary"
        android:text="@string/widget_options_configure"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.Smartspacer.Page.Popup"
        tools:textAppearance="@style/TextAppearance.Smartspacer.Page.Popup.Preview" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/expanded_long_press_popup_rearrange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:selectableItemBackground"
        app:icon="@drawable/ic_expanded_long_press_rearrange"
        app:iconTint="?android:textColorPrimary"
        app:iconPadding="@dimen/margin_16"
        android:gravity="start|center_vertical"
        android:paddingLeft="@dimen/margin_16"
        android:minHeight="@dimen/smartspace_long_press_popup_item_height"
        android:paddingStart="@dimen/smartspace_dismiss_margin"
        android:paddingEnd="@dimen/smartspace_dismiss_margin"
        android:textColor="?android:textColorPrimary"
        android:text="@string/expanded_custom_widget_rearrange"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.Smartspacer.Page.Popup"
        tools:textAppearance="@style/TextAppearance.Smartspacer.Page.Popup.Preview"
        android:visibility="gone"/>

</LinearLayout>